{
	"compilerOptions": {
		"skipLibCheck": true, // FIXME: 此处忽略了所有 .d.ts 文件用于缓解构建时的报错，但这不是最佳实践。
		"jsx": "preserve",
		"jsxImportSource": "vue",
		"module": "ESNext",
		"target": "ESNext",
		"noImplicitAny": true,
		"moduleResolution": "bundler",
		"lib": [
			"ESNext",
			"ESNext.AsyncIterable",
			"ES2015.Promise",
			"DOM",
			"DOM.Iterable",
			"WebWorker"
		],
		"esModuleInterop": true,
		"allowJs": false,
		"sourceMap": true,
		"strict": true,
		"noEmit": true,
		"allowUnreachableCode": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"noErrorTruncation": true,
		"useDefineForClassFields": true,
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": ".",
		"paths": {
			"assets/*": ["src/assets/*"],
			"components/*": ["src/components/*"],
			"composables/*": ["src/composables/*"],
			"layouts/*": ["src/layouts/*"],
			"pages/*": ["src/pages/*"],
			"plugins/*": ["src/plugins/*"],
			"modules/*": ["src/modules/*"],
			"helpers/*": ["src/helpers/*"],
			"classes/*": ["src/classes/*"],
			"stores/*": ["src/stores/*"],
			"types/*": ["src/types/*"],
			"utils/*": ["src/utils/*"],
			"styles/*": ["src/styles/*"],
			"api/*": ["src/api/*"],
			"ssl/*": ["src/ssl/*"],
		},
		"types": [
			"vite/client",
			"naive-ui/volar",
			"unplugin-vue-router/client",
		],
	},
}
